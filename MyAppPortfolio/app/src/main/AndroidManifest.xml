<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hilfritz.myappportfolio">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <!-- needed provider for PlaceListFragment auto update of list -->
        <provider android:authorities="com.hilfritz.myappportfolio" android:exported="false" android:name="com.activeandroid.content.ContentProvider" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.music.search.SearchArtistActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/search_activity"></activity>
        <activity
            android:name=".ui.music.topten.TopTenTracksActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_top_ten_tracks"></activity>
        <activity
            android:name=".ui.music.player.MusicPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_music_player"></activity>
        <activity
            android:name=".ui.places.PlaceActivity"
            android:label="@string/title_activity_place"
            android:parentActivityName=".MainActivity"
            ></activity>
    </application>

</manifest>
